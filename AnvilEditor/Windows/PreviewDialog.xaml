<controls:MetroWindow x:Class="AnvilEditor.Windows.OutputPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Preview Mission Data" Height="600" Width="950" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="CloseButton" Content="Close" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Click="CloseButtonClick" />

        <TextBox x:Name="MarkerText" Grid.Row="1" Grid.Column="0" Background="#EEEEEEFF" MouseDown="TextBoxClick" FontFamily="Segoe UI Mono" FontSize="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        <TextBox x:Name="InitText" Grid.Row="1" Grid.Column="1"  Background="#DDDDDDFF" MouseDown="TextBoxClick" FontFamily="Segoe UI Mono" FontSize="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</controls:MetroWindow>
