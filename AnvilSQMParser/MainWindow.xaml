<Window x:Class="AnvilSQMParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anvil SQM Parser" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Content="Convert" Click="ConvertSQM" Grid.Row="0" Grid.Column="0"/>
        <Button Content="Test" Click="Button_Click" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="SQMInputBox" Margin="5" Grid.Row="1" TextWrapping="Wrap" SpellCheck.IsEnabled="True" AcceptsReturn="True" />
        <TreeView x:Name="SQMTreeView" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"></TreeView>
        <TextBlock x:Name="SQMOutputBlock" Grid.Column="2" Grid.Row="1" Margin="5" TextWrapping="Wrap" Grid.ColumnSpan="2" Visibility="Hidden"/>
    </Grid>
</Window>
